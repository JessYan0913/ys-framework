{
  "name": "@ys/database",
  "version": "0.0.1",
  "description": "Database layer with Drizzle ORM for AI Chatbot monorepo",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./nestjs": {
      "types": "./dist/adapters/nestjs/index.d.ts",
      "default": "./dist/adapters/nestjs/index.js"
    },
    "./nextjs": {
      "types": "./dist/adapters/nextjs/index.d.ts",
      "default": "./dist/adapters/nextjs/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint ."
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "nanoid": "^3.3.4",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@types/pg": "^8.11.6",
    "@ys/eslint-config": "workspace:*",
    "eslint": "^8.57.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.30.6",
    "rimraf": "^5.0.5",
    "typescript": "^5.1.3"
  }
}
