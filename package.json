{
  "name": "@ys/root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install && turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "start:web": "turbo run dev --filter=@ys/web",
    "start:api": "turbo run start:dev --filter=@ys/api",
    "lint:fix": "turbo run lint:fix",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^5.0.5",
    "turbo": "latest",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "^0.44.4"
    }
  }
}
